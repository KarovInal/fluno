{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "Components/*": ["./src/components/*"],
      "Fields/*":     ["./src/components/fields/*"],
      "Selectors/*":  ["./src/selectors/*"],
      "Stateless/*":  ["./src/components/stateless/*"],
      "Templates/*":  ["./src/templates/*"],
      "Templates":    ["./src/templates/index.js"],
      "Store/*":      ["./src/store/*"],
      "Constants/*":  ["./src/constants/*"],
      "Ducks/*":      ["./src/ducks/*"],
      "Data/*":       ["./src/data/*"],
      "Utils/*":      ["./src/utils/*"],
      "Pages/*":      ["./src/pages/*"],
      "Layouts/*":    ["./src/layouts/*"],
      "Assets/*":     ["./src/assets/*"],
      "HOC/*":        ["./src/hoc/*"],
    },
  },
  "exclude": ["node_modules", "dist"]
}